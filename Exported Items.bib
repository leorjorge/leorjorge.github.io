@article{Britoattractiverolefloral2021,
  title = {The Attractive Role of Floral Elements in Heterantherous Species without Pronounced Stamen Differences},
  author = {Brito, Vinícius Lourenço Garcia and Leite, Fernanda Barão and Telles, Francismeire Jane and Jorge, Leonardo Ré and Sazima, Marlies},
