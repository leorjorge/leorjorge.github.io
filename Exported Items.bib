@article{MantylaFicustreesupregulated2022,
  title = {Ficus Trees with Upregulated or Downregulated Defence Did Not Impact Predation on Their Neighbours in a Tropical Rainforest},
  author = {Mäntylä, Elina and Jorge, Leonardo Ré and Koane, Bonny and Sam, Katerina and Segar, Simon T. and Volf, Martin and Weinhold, Alexander and Novotny, Vojtech},
  date = {2022-03-26},
  journaltitle = {Arthropod-Plant Interactions},
  shortjournal = {Arthropod-Plant Interactions},
